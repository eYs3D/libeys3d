<resources>

    <!-- Base application theme. -->
    <style name="AppThemeXX" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="md_color_button_text">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:textColorHint">@color/hint_color_selector</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@anim/open</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/close</item>
        <item name="android:taskOpenEnterAnimation">@anim/open</item>
        <item name="android:taskOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@anim/close</item>
        <item name="android:taskToFrontEnterAnimation">@anim/open</item>
        <item name="android:taskToFrontExitAnimation">@android:anim/fade_out</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@anim/close</item>
        <item name="android:wallpaperOpenEnterAnimation">@null</item>
        <item name="android:wallpaperOpenExitAnimation">@anim/close</item>
        <item name="android:wallpaperCloseEnterAnimation">@anim/open</item>
        <item name="android:wallpaperCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="item_2_lines">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/base_margin_horizontal</item>
        <item name="android:paddingEnd">@dimen/base_margin_horizontal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="item_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>

    <style name="item_subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="common_settings_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/label_vertical_spacing</item>
        <item name="android:layout_marginStart">@dimen/base_margin_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="color_palette_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/color_palette_title</item>
    </style>
    <style name="color_palette_title" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="depth_filter_title_style" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/GRAY</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="depth_filter_hint_style" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_hint</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
    <style name="depth_filter_hint_style_constant" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_hint</item>
        <item name="android:textColor">@color/GRAY</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginStart">18dp</item>
    </style>

</resources>

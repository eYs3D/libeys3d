<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/color_palette_hue"
        android:layout_width="200dp"
        android:scaleType="fitXY"
        android:layout_height="25dp"
        android:src="@drawable/color_palette_hue"
        android:layout_centerInParent="true"/>

    <EditText
        android:layout_alignParentStart="true"
        android:id="@+id/edit_text_z_near"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:inputType="numberSigned"
        android:maxLength="4"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/edit_text_z_near"
        android:text="@string/color_palette_unit" />

    <TextView
        android:id="@+id/unit_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="@string/color_palette_unit" />

    <EditText
        android:layout_toStartOf="@+id/unit_hint"
        android:id="@+id/edit_text_z_far"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:inputType="numberSigned"
        android:textStyle="bold"
        android:maxLength="4"
        />




</RelativeLayout>
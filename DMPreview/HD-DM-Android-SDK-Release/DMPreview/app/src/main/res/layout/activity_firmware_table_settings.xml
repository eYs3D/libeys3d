<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/indexLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/firmware_table_index_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/label_vertical_spacing"
        android:layout_marginStart="@dimen/base_margin_horizontal"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"/>

    <Spinner
        android:id="@+id/indexSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/indexLabel"
        app:layout_constraintBottom_toBottomOf="@id/indexLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/base_margin_horizontal"
        tools:listitem="1"/>

    <View
        android:id="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@id/indexLabel"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerVertical"
        android:layout_marginTop="@dimen/label_vertical_spacing"/>

    <TextView
        android:id="@+id/rectifyLogReadButton"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/label_vertical_spacing"
        android:paddingStart="@dimen/base_margin_horizontal"
        android:paddingEnd="@dimen/base_margin_horizontal"
        android:paddingBottom="@dimen/label_vertical_spacing"
        android:text="@string/firmware_table_rectify_log_read"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:background="?android:attr/selectableItemBackground"/>

    <View
        android:id="@+id/divider2"
        app:layout_constraintTop_toBottomOf="@id/rectifyLogReadButton"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerVertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/app_detail_background"
        />

    <RelativeLayout
        android:id="@+id/waitingSpinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>